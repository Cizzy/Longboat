<h1>Login</h1>
<%= form_with url: users_login_path do |f| %>
  <table>
    <tr>
      <td><%= f.label 'Handle' %></td>
      <td><%= f.text_field :handle %></td>
    </tr>
    <tr>
      <td><%= f.label 'Password' %></td>
      <td><%= f.password_field :password %></td>
    </tr>
    <tr>
      <td><%= f.submit 'Login' %></td>
    </tr>
  </table>
<% end %>
